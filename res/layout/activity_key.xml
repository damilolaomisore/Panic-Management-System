<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    android:backgroundTint="#F8F5F5"
    android:orientation="vertical"
    tools:context=".keyActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#BCBABA"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp"
        android:layout_gravity="top"
        android:text="Keywords"
        android:textColor="#0B0A0A"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_marginBaseline="76dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFDFD"
            android:backgroundTint="#F8F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Robbery"
                    android:textColor="#100E0E"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/robberyEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_marginBaseline="76dp" />

                <EditText
                    android:id="@+id/robberyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:hyphenationFrequency="none"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/kidnappingEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Kidnapping"
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/kidnappingEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <EditText
                    android:id="@+id/kidnappingEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/fireEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/robberyEditText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Fire Outbreak"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <EditText
                    android:id="@+id/fireEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/medEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/kidnappingEditText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="139dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Medical    Emergency"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <EditText
                    android:id="@+id/medEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/rapeEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/fireEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Rape"
                    android:textColor="#0B0A0A"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <EditText
                    android:id="@+id/rapeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/assaultEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/medEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Assault"
                    android:textColor="#131313"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <EditText
                    android:id="@+id/assaultEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/disasterEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/rapeEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Natural Disaster"
                    android:textColor="#040303"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <EditText
                    android:id="@+id/disasterEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/accidentEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/assaultEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Accident"
                    android:textColor="#0C0A0A"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <EditText
                    android:id="@+id/accidentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/explosionEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/disasterEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:background="#FFFDFD"
                android:backgroundTint="#F8F5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="9dp"
                    android:text="Explosion"
                    android:textColor="#0B0A0A"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                <EditText
                    android:id="@+id/explosionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#0C0C0C"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/accidentEditText" />
            </LinearLayout>
            <Button
                android:id="@+id/saveButton"
                android:layout_width="127dp"
                android:layout_height="65dp"
                android:layout_marginStart="139dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="139dp"
                android:onClick="saveButton"
                android:text="SAVE"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explosionEditText" />
        </LinearLayout>

    </ScrollView>




</LinearLayout>